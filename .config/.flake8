[flake8]
exclude = .venv,venv,__pycache__,build,dist
max-line-length = 150
extend-ignore = W293,E231,E222,E272,E713,F821
per-file-ignores =
    # Ignore undefined names in template strings in core_project_builder.py
    src/create_python_project/utils/core_project_builder.py:F821,E202,E221
    # Ignore whitespace errors in template strings in ai_prompts.py
    src/create_python_project/utils/ai_prompts.py:E202
    # Ignore E203 error in fix_specific_lint_issues.py
    scripts/fix_specific_lint_issues.py:E203
